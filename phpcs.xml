<?xml version="1.0"?>
<ruleset name="MyProject Standards">
    <description>PSR-12 coding standard for MyProject</description>

    <!-- Include the whole PSR-12 standard -->
    <rule ref="PSR12"/>

    <!-- Paths to check -->
    <file>tests</file>
    <file>app</file>
    <file>routes</file>
    <file>config</file>

    <file>database</file>

    <!-- Exclude some files -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/cache/*</exclude-pattern>
    <exclude-pattern>node_modules</exclude-pattern>

    <!-- Show colors in console -->
    <arg name="colors"/>

    <!-- Show progress of the run -->
    <arg value="p"/>
</ruleset>